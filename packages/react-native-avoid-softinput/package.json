  "scripts": {
    "build-library": "bob build",
    "release-library": "release-it"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "6.0.0",
    "@types/react": "18.2.42",
    "react": "18.2.0",
    "react-native": "0.73.1",
    "react-native-builder-bob": "0.21.2",
    "release-it": "16.0.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-native": ">=0.71.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
